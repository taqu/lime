struct VSOutput
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};

Texture2D tex : register(t0);

float4 main(VSOutput input) : SV_Target
{
    uint2 size;
    tex.GetDimensions(size.x, size.y);
    size -= 1;
    int3 location;
    location.xy = input.tex.xy * size;
    location.z = 0;
    return tex.Load(location);
}
